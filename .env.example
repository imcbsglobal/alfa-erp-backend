# Copy this file to `.env` and fill in real credentials.
# IMPORTANT: Do NOT commit real secrets to version control.

# Django Settings
SECRET_KEY=replace-me
DEBUG=True  # set to False in production

# Database
DB_NAME=alfa_erp
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=127.0.0.1
DB_PORT=5432

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Enable/Disable Cloudflare R2 Storage
CLOUDFLARE_R2_ENABLED=false

CLOUDFLARE_R2_BUCKET=your-bucket
CLOUDFLARE_R2_PUBLIC_URL=https://your-r2-public-url.example
CLOUDFLARE_R2_BUCKET_ENDPOINT=https://your-r2-endpoint.example
CLOUDFLARE_R2_ACCESS_KEY=your_access_key_here
CLOUDFLARE_R2_SECRET_KEY=your_secret_key_here
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here

# API keys
SALES_IMPORT_API_KEY=your_api_key_here
